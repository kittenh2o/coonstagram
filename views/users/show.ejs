<%include ../partials/header%>
<%include ../partials/message%>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h1><%=user.username%></h1>
      <img src="<%=user.avatar%>" alt="user profile image">
    </div>
    <div class="col-xs-8">
      <h4>Email: <%=user.email%></h4>
    </div>
  </div>
  <hr>
  <div class="row">
    <h2><%=user.username%>'s Photos</h2>
  <% photoList.forEach( photo => {%>
    <div class="col-md-3 col-sm-4 col-xs-6">
      <div class="thumbnail">
        <a href="/photos/<%= photo._id %>"><img src="<%=photo.image%>"></a>
        <div class="caption">
            <h4><%=photo.name%></h4>
        </div>
      </div>
    </div>
  <%});%>
  </div>
</div>


<%include ../partials/footer%>