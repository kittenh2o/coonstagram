<%include ../partials/header%>
<%include ../partials/message%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Upload a New Photo</h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/photos" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                   <input class="form-control" type="text" name="photo[name]" placeholder="name"> 
                </div>
                <div class="form-group">
                    <input type="file" id="image" name="image" accept="image/*" required>
                    <!-- <input class="form-control" type="text" name="photo[image]" placeholder="url"> -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="photo[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>                
            </form>
            <a href="/photos">Go Back</a>
        </div>
    </div>
</div>



<%include ../partials/footer%>