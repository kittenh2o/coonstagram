<%include ./partials/header%>
<%include ./partials/message%>

<div class="container">
  <h3>Set your new password</h3>
  <form action="/reset/<%=token%>" method="POST">
    <div class="form-group">
      <label>
        New password <input type="password" name="password" placeholder="New password" autofocus class="form-control">
      </label>
    </div>
    <div class="form-group">
      <label>
        Confirm password <input type="password" name="confirm" placeholder="Confirm password" class="form-control">
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
  </form>
</div>


<%include ./partials/footer%>