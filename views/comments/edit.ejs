<%include ../partials/header%>
<%include ../partials/message%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <h4><strong>Comments</strong> <span class="glyphicon glyphicon-comment"></span></h4>
        <div class="well comment-editor">
          <h4>Edit your comment <span class="glyphicon glyphicon-pencil"></span></h4>
          <form action="/photos/<%=photoId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" disabled value="<%=currentUser.username%>"> 
            </div>
            <div class="form-group">
              <textarea class="form-control" name="comment[text]" rows="5" cols="70"><%=comment.text%></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success">Update</button>
            </div>                
          </form>
        </div>
        <a href="/photos/<%=photoId%>" class="btn btn-primary btn-sm">Go Back</a>
      </div>
    </div>
  </div>
</div>




<%include ../partials/footer%>